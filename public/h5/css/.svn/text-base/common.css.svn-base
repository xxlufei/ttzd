/* global */
html,body,div,p,form,label,ul,li,dl,dt,dd,ol,img,button,b,em,strong,small,h1,h2,h3,h4,h5,h6{margin:0;padding:0;border:0;list-style:none;font-style:normal;}
body{font-family:SimHei,'Helvetica Neue',Arial,'Droid Sans',sans-serif;font-size:14px;color:#333;background:#f2f2f2;padding: 0;margin: 0 auto;}
a, a.link{color:#666;text-decoration:none;font-weight:500;}
a, a.link:hover{color:#666;}
h1,h2,h3,h4,h5,h6{font-weight: normal;}
.left-menu::-webkit-scrollbar {width: 0;}

/* header */
.list_top {width: 100%;position: fixed;top:0;}
.title {background: #fdbe3d;text-align: center;padding: 10px 0;color: #fff;font-size: 20px;}
.banner img {width: 100%;margin: 0 auto;}

/* footer */
.footer{display:block;z-index: 100;position:fixed;width:100%;bottom:0;color:#fff;background:#4d4d4d;line-height:40px;font-size:15px;}
.footer .left{float:left;margin:5px 10px 5px 70px;position: relative;z-index: 100;}
.footer .right{float:right;z-index: 100;}
.footer .right .disable{background:#999;}
.footer .xhlbtn{display:block;text-align:center;line-height:50px;background-color:#fdbe3d;color:#fff;width:95px;}
.footer .cartShowBtn {width: 38px;height: 38px;-webkit-border-radius: 50px;-moz-border-radius: 50px;border-radius: 50px;border: 3px solid #4d4d4d;background: #fff;display: inline-block;position: absolute;top: -22px;left: 20px;text-align: center;}
.footer .cartShowBtn img {width: 30px;height: 30px;margin-top: 4px;}
.footer .cartShowBtn i {position: absolute;top: 3px;left: 19px;font-style: normal;color: #fff;background: #40b8ec;width: 16px;height: 16px;border-radius: 50px;display: inline-block;line-height: 16px;font-size: 12px;}
